@model Ajaxs_01.Paging.PaginatedList<StudentApp.Models.ShowStudentVM>


<a asp-controller="Student" asp-action="Index" class="btn btn-success">Add Student</a>
<div class="input-group m-md-3">
    <button type="button" id="sendSearch" class="btn btn-primary mr-4 ">
        Search
    </button>
    <div class="form-outline mr-2">
        <label>Country</label>
        <input type="search" id="country" placeholder="Enter Country" class="form-control" />
    </div>
    <div class="form-outline mr-2">
        <label>Level</label>
        <div id="levelBooks">
            @* Level Drop List *@
        </div>
    </div>
    <div class="form-outline mr-2">
        Is enrolled
        <input type="checkbox" id="isActive">
    </div>
</div>

<!--<div id="studentTable">-->
 @*Students Table*@ 
<!--</div>-->

<table id="studentTable" class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Country
            </th>
            <th>
                Enrolled
            </th>
            <th>
                Level
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody class="mt-5">

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @if (item.IsActive)
                    {
                <span>Yes</span>
                    }
                @if (!item.IsActive)
                    {
                <span>No</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level.LevelNumber)
            </td>
            <td>
                <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Student" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
            </td>
        </tr>
        }
    </tbody>
</table>

<button type="button" id="prev" class="btn btn-default">Previous</button>
<span id="pageNumber">1</span>
<button type="button" id="next" class="btn btn-default">Next</button>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>

