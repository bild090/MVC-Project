        //Get Level List when page Loaded
        $(document).ready(function () {

            $.ajax({
                type: "Get",
                url: "/Home/GetLevelList",
                dataType: 'html',
                contentType: 'application/x-www-form-urlencoded',
                success: function (res) {
                    $("#levelBooks").html(res);
                },
                error: function (req, status, error) {
                    console.log(error);
                }
            });
        });

        // When search button clicked
        $("#sendSearch").click(function (e) {
            e.preventDefault();
            var searchContent = {
                level: $("#Id").val(),
                country: $("#country").val(),
                isActive: $('#isActive').is(":checked")
            }
            console.log(searchContent);
            $.ajax({
                type: "GET",
                url: "/Home/GetStudentList",
                data: searchContent,
                dataType: 'html',
                contentType: 'application/x-www-form-urlencoded',
                success: function (res) {
                    $("#studentTable").html(res)
                },
                error: function (req, status, error) {
                    console.log(error);
                }
            });
        });
        var page = 1
        // When Next button clicked
    $("#next").click(function () {

        if (page < @Model.TotalPages)
        {
            ++page
            $("#pageNumber").text(page);
            console.log(page);
            $.ajax({
                type: "GET",
                url: "/Home/GetStudentList",
                data: {
                    searchContent: null,
                    pageNumber: page
                },
                dataType: 'html',
                contentType: 'application/x-www-form-urlencoded',
                success: function (res) {
                    $("#studentTable").html(res)
                },
                error: function (req, status, error) {
                    console.log(error);
                }
            });
        }

        });

        // When Prev button clicked
    $("#prev").click(function () {
        if (page > 1)
        {
            --page;
            $("#pageNumber").text(page);
            console.log(page);
            $.ajax({
                type: "GET",
                url: "/Home/GetStudentList",
                data: {
                    searchContent: null,
                    pageNumber: page
                },
                dataType: 'html',
                contentType: 'application/x-www-form-urlencoded',
                success: function (res) {
                    $("#studentTable").html(res)
                },
                error: function (req, status, error) {
                    console.log(error);
                }
            });
        }   
    });
</script>
}
