@model cloudscribe.Pagination.Models.PagedResult<ShowStudentVM>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Country
            </th>
            <th>
                Enrolled
            </th>
            <th>
                Level
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody class="mt-5">

        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <span>Yes</span>
                    }
                    @if (!item.IsActive)
                    {
                        <span>No</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level.LevelNumber)
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        Edit
                    </a>
                    <a asp-controller="Student" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">
                        Details
                    </a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<cs-pager cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-paging-pagesize=Model.PageSize
          cs-pagenumber-param="pagenumber"
          asp-controller="Home"
          asp-action="Index"
          
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
</cs-pager>